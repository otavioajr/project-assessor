    "@fastify/rate-limit": "^9.1.0",
    "@fastify/cookie": "^9.3.1",
    "pg": "^8.11.3",
    "dotenv": "^16.3.1",
    "zod": "^3.22.4",
    "date-fns": "^3.0.6",
    "date-fns-tz": "^3.0.0",
    "node-cron": "^3.0.3",
    "axios": "^1.6.5",
    "openai": "^4.24.1",
    "pdfkit": "^0.14.0",
    "csv-stringify": "^6.4.6"
